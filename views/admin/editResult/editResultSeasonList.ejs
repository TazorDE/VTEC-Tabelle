<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Result</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/slate/bootstrap.min.css" integrity="sha384-8iuq0iaMHpnH2vSyvZMSIqQuUnQA7QM+f6srIdlgBrTSEyd//AWNMyEaSF2yPzNQ" crossorigin="anonymous">
</head>

<body class="text-center">

  <style>
    html,
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }

    #container {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    #footer {
      margin-top: auto;
    }
  </style>
  <div id="container">
    <div id="body">
      <h1>Edit Result</h1>
      <br>
      <% let sortedArray;
      // create a sorted array of seasons by year and seasonNr
      // sort list.rows by doc.year and doc.seasonNr
      sortedArray = list.rows.sort(function(a, b) {
        if (a.doc.year < b.doc.year) {
          return 1;
        }
        if (a.doc.year > b.doc.year) {
          return -1;
        }
        if (a.doc.seasonNr < b.doc.seasonNr) {
          return 1;
        }
        if (a.doc.seasonNr > b.doc.seasonNr) {
          return -1;
        }
        return 0;
      });
    %>

      <% sortedArray.forEach(element => { %>
      <button type="button" class="btn btn-info" onclick="window.location.href='/editResult/<%= element.doc.year %>-<%= element.doc.seasonNr %>'">
        <%= element.doc.year %> Season: <%= element.doc.seasonNr %>
      </button>
      <br>
      <br>
      <% }); %>
    </div>
    <div id="footer">
      <%- include('../../partials/footer')%>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>