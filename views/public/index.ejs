<h1>VTEC Results System</h1>

<% // create Link-Buttons that lead to the results page for the season with the newest season on top %>
<% 
  // sort list.rows by doc.year and doc.seasonNr in descending order
  list.rows.sort(function(a, b) {
    if (a.doc.year < b.doc.year) {
      return 1;
    } else if (a.doc.year > b.doc.year) {
      return -1;
    } else {
      if (a.doc.seasonNr < b.doc.seasonNr) {
        return 1;
      } else if (a.doc.seasonNr > b.doc.seasonNr) {
        return -1;
      } else {
        return 0;
      }
    }
  });
%>
<% list.rows.forEach(function(row) { %>
<a href="/results/<%- row.doc.year %>/<%- row.doc.seasonNr %>">
  <%- row.doc.year %>-<%- row.doc.seasonNr %>
</a>
<br>
<% }); %>