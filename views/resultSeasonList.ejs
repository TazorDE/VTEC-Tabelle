<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Result</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/slate/bootstrap.min.css" integrity="sha384-8iuq0iaMHpnH2vSyvZMSIqQuUnQA7QM+f6srIdlgBrTSEyd//AWNMyEaSF2yPzNQ" crossorigin="anonymous">
</head>

<body class="text-center">

  <h1>New Result</h1>
  <br>
  <% let sortedArray;
    // sort list.rows by doc.year and doc.seasonNr
    sortedArray = list.rows.sort(function(a, b) {
      if (a.doc.year < b.doc.year) {
        return 1;
      }
      if (a.doc.year > b.doc.year) {
        return -1;
      }
      if (a.doc.seasonNr < b.doc.seasonNr) {
        return 1;
      }
      if (a.doc.seasonNr > b.doc.seasonNr) {
        return -1;
      }
      return 0;
    });
  %> 
  <% sortedArray.forEach(element => { %>
  <button type="button" class="btn btn-info"><a href="/newResult/<%= element.doc.year %>-<%= element.doc.seasonNr %>"><%= element.doc.year %>
    Season: <%= element.doc.seasonNr %></a> </button>
  <br>
  <% }); %>
  <%- include('footer')%>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>